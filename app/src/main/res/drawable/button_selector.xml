<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">

            <stroke
                android:width="1dp"

                />
            <corners
                android:radius="12dp"
                />
            <padding
                android:bottom="1dp"
                android:top="1dp"
                android:left="1dp"
                android:right="1dp"
                />

            <gradient android:angle="270"
                android:centerColor="#444298fd"
                android:endColor="#5485b4"
                android:startColor="@color/colorPrimary" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                />
            <corners
                android:radius="12dp"
                />
            <padding
                android:bottom="1dp"
                android:top="1dp"
                android:left="1dp"
                android:right="1dp"
                />

            <gradient android:angle="270"
                android:centerColor="#317a94ef"
                android:endColor="#7aa3ea"
                android:startColor="#915289f7" />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape android:shape="rectangle">
            <stroke
                android:width="1dp"
                />
            <corners
                android:radius="12dp"
                />
            <padding
                android:bottom="1dp"
                android:top="1dp"
                android:left="1dp"
                android:right="1dp"
                />

            <gradient android:angle="270"
                android:endColor="#7aa3ea"
                android:startColor="#91b1bacc" />
        </shape>
    </item>

    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android">

            <stroke
                android:width="1dp"

                />


            <corners
                android:radius="12dp"
                />
            <padding
                android:bottom="1dp"
                android:top="1dp"
                android:left="1dp"
                android:right="1dp"
                />

            <gradient android:angle="270"
                android:centerColor="@color/colorPrimary"
                android:endColor="@color/colorPrimary"
                android:startColor="@color/colorPrimaryLight" />
        </shape>
    </item>
</selector>